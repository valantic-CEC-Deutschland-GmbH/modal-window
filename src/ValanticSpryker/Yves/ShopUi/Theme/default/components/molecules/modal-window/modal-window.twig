{% extends model('component') %}

{% define config = {
    name: 'modal-window',
    tag: 'modal-window',
} %}

{% define data = {
    modalName: required
} %}

{% define attributes = {
    modalName: data.modalName
} %}

{% block body %}
    <div class="{{ config.name }}__modal-wrapper">
        <div class="{{ config.name }}__modal">
            <div class="{{ config.name }}__header-actions">
                <div class="{{ config.name }}__close-button rounded-full"
                     data-trigger="close-{{ data.modalName }}">
                    <i class="fa fa-times"></i>
                </div>
            </div>

            <div class="{{ config.name }}__inner-content">
                <div class="{{ config.name }}__modal-header">
                    {% block header %} {% endblock %}
                </div>

                {% if 'with-blue-line' in modifiers %}
                    <div class="{{ config.name }}__with-blue-line"></div>
                {% endif %}

                <div class="{{ config.name }}__modal-content">
                    {% block content %} {% endblock %}
                </div>
                <div class="{{ config.name }}__footer-actions">
                    {% block actions %} {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
